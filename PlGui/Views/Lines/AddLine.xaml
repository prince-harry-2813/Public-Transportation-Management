<UserControl x:Class="PlGui.Views.Lines.AddLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlGui.Views.Lines"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
        <Grid
            Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> 
                <RowDefinition Height="Auto"/> 
                <RowDefinition Height="Auto"/> 
                <RowDefinition Height="Auto"/> 
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!--#region First Station Details -->
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Margin="10"
                FontSize="14pt"
                Content="First Station"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
               >
            </Label>

            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Center"
                     Text="{Binding FirstStation}"
                     Margin="10"
                     FontSize="12pt"
                     Padding="1">
            </TextBox>
            <!--#endregion-->

            <!--#region Last Station Details -->
            <Label
                Grid.Row="1"
                VerticalAlignment="Center"
                Grid.Column="0"
                Margin="10"
                FontSize="14pt"
                Content="Last Station"
                HorizontalAlignment="Left">
            </Label>

            <TextBox
                VerticalAlignment="Center"
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding LastStation}"
                Margin="10"
                FontSize="12pt"
                Padding="1">
            </TextBox>
            <!--#endregion-->

            <!--#region ID Details -->
            <Label
                VerticalAlignment="Center"
                Grid.Row="2"
                Grid.Column="0"
                Margin="10"
                FontSize="14pt"
                Content="ID"
                HorizontalAlignment="Left">
            </Label>

            <TextBox
                VerticalAlignment="Center"
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding Id}"
                Margin="10"
                FontSize="12pt"
                Padding="1">
            </TextBox>
            <!--#endregion-->

            <!--#region Code Details -->
            <Label
                Grid.Row="3"
                VerticalAlignment="Center"
                Grid.Column="0"
                Margin="10"
                FontSize="14pt"
                Content="Code"
                HorizontalAlignment="Left">
            </Label>

            <TextBox
                VerticalAlignment="Center"
                Grid.Row="3"
                Grid.Column="1"
                Text="{Binding Code}"
                Margin="10"
                FontSize="12pt"
                Padding="1">
            </TextBox>
            <!--#endregion-->

        </Grid>
</UserControl>
